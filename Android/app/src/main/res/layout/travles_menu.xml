<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="VNSR"
        android:textAlignment="center"
        android:textColor="#FF0000FF"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSubAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Travels"
        android:textAlignment="center"
        android:textColor="#FF0000FF"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAppName" />

    <LinearLayout
        android:id="@+id/fldButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/bttnTravels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travels" />

        <Button
            android:id="@+id/bttnPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points" />

        <Button
            android:id="@+id/bttnWays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ways" />

        <Button
            android:id="@+id/bttnToolRoads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tool roads" />

        <Button
            android:id="@+id/bttnHotels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotels" />

        <Button
            android:id="@+id/bttnTravelStates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travel states" />

        <Button
            android:id="@+id/bttnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFF0000"
            android:text="Back" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>