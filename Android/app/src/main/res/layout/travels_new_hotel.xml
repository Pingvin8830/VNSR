<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <TableLayout
        android:id="@+id/tblHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/trName"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_name" />

            <EditText
                android:id="@+id/edtxtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:autofillHints=""
                tools:ignore="LabelFor" />
        </TableRow>

        <TableRow
            android:id="@+id/trAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_address" />

            <Spinner
                android:id="@+id/spnAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:id="@+id/trArrivalDateTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtArrivalDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_arrival" />

            <Button
                android:id="@+id/bttnArrivalDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bttn_case_date_time" />

        </TableRow>

        <TableRow
            android:id="@+id/trDepartureDateTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtDepartureDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_departure" />

            <Button
                android:id="@+id/bttnDepartureDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bttn_case_date_time" />

        </TableRow>

        <TableRow
            android:id="@+id/trCost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_cost" />

            <EditText
                android:id="@+id/edtxtCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:autofillHints=""
                tools:ignore="LabelFor" />

        </TableRow>

        <TableRow
            android:id="@+id/trState"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_state" />

            <EditText
                android:id="@+id/edtxtState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="text"
                tools:ignore="LabelFor" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>